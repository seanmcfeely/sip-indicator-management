#!/usr/bin/env bash
# This script should be executed from the root of the project.

#find var/records/ -maxdepth 1 -mindepth 1 -type d -mtime +30  -exec rm -r {} \;
find var/records/ -maxdepth 1 -mindepth 1 -type d -mtime +30 | while read record_dir;
do
    echo "deleting old records in $record_dir/*"
    rm -r "$record_dir"
done;
