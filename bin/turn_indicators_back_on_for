#!/usr/bin/env bash

# This script should be executed from the root of the project.

if [ -z "$1" ]
then
    echo "usage: turn_indicators_back_on_for var/records/path/to/indicators"
    exit 1
fi

echo "turning all indicators back to Analyzed inside of $1/* "
cat "$1"/*.json | jq '.id' | while read id; do sipit update $id -s Analyzed; done
